<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".userFeedback">

    <Button
        android:id="@+id/sendBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:layout_marginEnd="72dp"
        android:background="@color/colorPrimary"
        android:fontFamily="@font/helveticaneue_sem"
        android:text="send"
        android:textColor="@color/White"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/descText" />

    <EditText
        android:id="@+id/nameText"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/primary_outline_textbox"
        android:ems="10"
        android:fontFamily="@font/helveticaneue_med"
        android:hint="Name"
        android:textColorHint="@color/Text"
        android:inputType="textPersonName"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"
        android:textColor="@color/Text"
        android:textSize="16sp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView6" />

    <EditText
        android:id="@+id/subjectText"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/primary_outline_textbox"
        android:ems="10"
        android:fontFamily="@font/helveticaneue_med"
        android:hint="Subject"
        android:textColorHint="@color/Text"
        android:inputType="textPersonName"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"
        android:textColor="@color/Text"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameText" />

    <EditText
        android:id="@+id/descText"
        android:layout_width="0dp"
        android:layout_height="248dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/primary_outline_textbox"
        android:ems="10"
        android:fontFamily="@font/helveticaneue_medium"
        android:gravity="start"
        android:hint="Write your feedback here..."
        android:inputType="textMultiLine"
        android:maxLines="8"
        android:textColorHint="@color/Text"
        android:padding="32dp"
        android:singleLine="false"
        android:textAlignment="viewStart"
        android:textColor="@color/Text"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/subjectText" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="95dp"
        android:layout_height="68dp"
        android:src="@drawable/ic_app_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/feedbackLoad"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/sendBtn"
        app:layout_constraintStart_toEndOf="@+id/sendBtn"
        app:layout_constraintTop_toTopOf="@+id/sendBtn" />

</androidx.constraintlayout.widget.ConstraintLayout>