<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".profileActivity">

     <de.hdodenhof.circleimageview.CircleImageView
         android:id="@+id/profile_picMain"
         android:layout_width="140dp"
         android:layout_height="140dp"
         android:src="@drawable/avatar"
         android:layout_centerHorizontal="true"
         android:layout_marginTop="60dp" />

     <TextView
         android:id="@+id/profile_name"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="Loading..."
         android:fontFamily="@font/helveticaneu_bold"
         android:textColor="@color/colorWhite"
         android:textSize="28dp"
         android:layout_below="@+id/profile_picMain"
         android:layout_centerHorizontal="true"
         android:layout_marginTop="15dp"

         />

     <TextView
         android:id="@+id/profile_regNo"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="Loading..."
         android:fontFamily="@font/helveticaneu_bold"
         android:textColor="@color/colorWhite"
         android:textSize="28dp"
         android:layout_below="@+id/profile_name"
         android:layout_centerHorizontal="true"
         android:layout_marginTop="5dp"

         />
     <TextView
         android:id="@+id/profile_Grp"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="Loading..."
         android:fontFamily="@font/helveticaneu_bold"
         android:textColor="@color/colorWhite"
         android:textSize="28dp"
         android:layout_below="@+id/profile_regNo"
         android:layout_centerHorizontal="true"
         android:layout_marginTop="5dp"

         />

     <ImageView
         android:id="@+id/profilr_signOutImg"
         android:layout_width="36dp"
         android:layout_height="36dp"
          android:src="@drawable/ic_baseline_arrow_back_24"
         android:layout_below="@+id/profile_regNo"
         android:layout_marginLeft="100dp"
         android:layout_marginTop="300dp"
         />
     <TextView
         android:id="@+id/logout_profile"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
          android:text="Sign Out"
         android:fontFamily="@font/helveticaneu_bold"
         android:textColor="@color/colorWhite"
         android:textSize="25sp"
         android:layout_marginLeft="150dp"

         android:layout_marginTop="594dp"/>














</RelativeLayout>