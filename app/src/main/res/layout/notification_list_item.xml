<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:expandableTextView="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="12dp"
        app:cardBackgroundColor="@color/Grey"
        app:cardCornerRadius="8dp"
        app:contentPadding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinsmedium"
                android:paddingStart="10dp"
                android:textColor="@color/Text"
                android:textSize="@dimen/_13ssp"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Webster" />

            <com.ms.square.android.expandabletextview.ExpandableTextView
                android:id="@+id/notification_desc_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="7dp"
                app:layout_constraintTop_toBottomOf="@id/name"
                expandableTextView:animDuration="100"
                expandableTextView:maxCollapsedLines="1"
                tools:ignore="MissingConstraints">

                <TextView
                    android:id="@id/expandable_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:fontFamily="@font/poppinslight"
                    android:justificationMode="inter_word"
                    android:textColor="@color/Text"
                    android:textSize="14sp"
                    tools:text="Mid term evaluation" />

                <ImageButton
                    android:id="@id/expand_collapse"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="right|bottom"
                    android:background="@android:color/transparent" />
            </com.ms.square.android.expandabletextview.ExpandableTextView>

            <TextView
                android:id="@+id/date_time"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:fontFamily="@font/helveticaneue_med"
                android:gravity="end"
                android:paddingHorizontal="10dp"
                android:textColor="@color/Text"
                android:textSize="@dimen/_8ssp"
                app:layout_constraintBottom_toTopOf="@id/notification_desc_tv"
                tools:text="10:50 AM / 01-11-2022" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>


